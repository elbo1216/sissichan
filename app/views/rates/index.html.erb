<div class='rates-container'>
  <div class='rates-image'>
  </div>
  <div class='rates-content'>
    <div class='rates-top'>
      <div class='rates-top-left'>
        <table>
          <thead>
            <tr>
              <td colspan=2>
                BRIDE 
              </td>
            </tr>
          </thead>
          <tbody>
            <% @bride_rates.each do |bride| -%>
              <tr>
                <td><%= bride.service_name -%></td>
                <td class='right-align'><%= bride.service_rate -%></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      </div>
      <div class='rates-top-right'>
        <table>
          <thead>
            <tr>
              <td colspan=2>
                BRIDESMAIDS/OTHERS:
              </td>
            </tr>
          </thead>
          <tbody>
            <% @other_rates.each do |bride| -%>
              <tr>
                <td><%= bride.service_name -%></td>
                <td class='right-align'><%= bride.service_rate -%></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      </div>
    </div>
    <div class='clear'></div>
    <div class='rates-mid'>
      <table>
        <thead>
          <tr>
            <td colspan=2>
              OPTIONAL ADD-ON SERVICES:
            </td>
          </tr>
        </thead>
        <tbody>
          <% @optional_rates_tier1.each do |optional| -%>
            <tr>
              <td><%= optional.service_name -%></td>
              <td class='right-align'><%= optional.service_rate -%></td>
            </tr>
          <% end -%>
        </tbody>
      </table>
      <br/><br/>
      <table>
        <tbody>
          <% @optional_rates_tier2.each do |optional| -%>
            <tr>
              <td><%= optional.service_name -%></td>
              <td class='right-align'><%= optional.service_rate -%></td>
            </tr>
          <% end -%>
        </tbody>
      </table>
    </div>
    <div class='rates-bottom'>
      <ul>
        <li class='rates-bottom-left-link'><a href='/booking_policy'>BOOKING POLICY</a></li>
        <li class='rates-bottom-right-link'><a href='/faq'>FREQUENTLY ASKED QUESTIONS</a></li>
      </ul>
    </div>
  </div>
</div>
