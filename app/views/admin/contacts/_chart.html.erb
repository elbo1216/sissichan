<div class='alert-info well info'>
  This chart shows for the year selected the number of contacts you received per month.
</div>
<div class='graph' id='d3_graph'>
  <form id='contact_form' method='POST'>
    <select id='year' name='year'>
      <%= raw @option_list.join("") %>
    </select>
  </form>
  <input id='results' type='hidden' value='<%= @data.to_json %>' />
</div>
<script>
$('#year').change(function() {$('#contact_form').submit()});
var json = $.parseJSON($('#results').val());
var parseDate = d3.time.format("%m-%Y").parse;
var data = [];
var keys = [];
for (var key in json) {
  keys.push(key)
}
keys = keys.sort();
keys.forEach(function(k) {
  data.push({'date' : parseDate(k), 'count' : json[k]});
});
var margin = {top: 20, right: 80, bottom: 30, left: 50},
    width = $("body").width() - margin.left - margin.right,
    height = 500 - margin.top - margin.bottom;


var x = d3.time.scale()
    .range([0, width]);

var y = d3.scale.linear()
    .range([height, 0]);

var xAxis = d3.svg.axis()
    .scale(x)
    .ticks(keys.length)
    .orient("bottom");

var yAxis = d3.svg.axis()
    .scale(y)
    .orient("left");

var line = d3.svg.line()
    .x(function(d) { return x(d.date); })
    .y(function(d) { return y(d.count); });

var svg = d3.select("body").append("svg")
    .attr("width", width + margin.left + margin.right)
    .attr("height", height + margin.top + margin.bottom)
  .append("g")
    .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

  x.domain(d3.extent(data, function(d) { return d.date; }));
  y.domain(d3.extent(data, function(d) { return d.count; }));

  svg.append("g")
      .attr("class", "x axis")
      .attr("transform", "translate(0," + height + ")")
      .call(xAxis);

  svg.append("g")
      .attr("class", "y axis")
      .call(yAxis)
    .append("text")
      .attr("transform", "rotate(-90)")
      .attr("y", 6)
      .attr("dy", ".71em")
      .style("text-anchor", "end")
      .text("Users");

  svg.append("path")
      .datum(data)
      .attr("class", "line")
      .attr("d", line);

  svg.selectAll("circle")
     .data(data)
     .enter().append("svg:circle")
     .attr("cx", function(d) { return x(d.date); })
     .attr("cy", function(d) { return y(d.count); })
     .attr("fill", "blue")
     .attr("r", 3);

  svg.selectAll("foo")
     .data(data)
     .enter()
     .append("text")
     .text(function(d) { return d.count; })
     .attr("x", function(d) { return x(d.date); })
     .attr("y", function(d) { return y(d.count) - 5; })
     .attr("font-family", "sans-serif")
     .attr("font-size", "14px")
     .attr("fill", "red");

</script>
